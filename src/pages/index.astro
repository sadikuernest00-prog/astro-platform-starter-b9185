---
const FORM_ENDPOINT = "https://formspree.io/f/xzznjkvd";
const CEO_NAME = "Robert Amicolsen";
const CEO_EMAIL = "robertamicolsen@gmail.com";
---

<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title>Amicbridge — Borrow & Lend Network</title>
  <meta
    name="description"
    content="Amicbridge is a verified network bridge connecting borrowers and lenders. Identity verification required before network access."
  />
</head>

<body>
  <!-- HEADER -->
  <header class="header">
    <div class="container header-inner">
      <div class="brand">
        <strong>Amicbridge</strong>
        <span class="muted">Verified lending network</span>
      </div>

      <nav class="nav">
        <a href="#about">About</a>
        <a href="#request">Request</a>
        <a href="#safety">Safety</a>
        <a href="#contact">Contact</a>
      </nav>
    </div>
  </header>

  <main>
    <!-- HERO -->
    <section class="section hero">
      <div class="container">
        <h1>A verified network for borrowing and lending</h1>

        <p class="lead">
          Amicbridge is a network bridge for serious people and business partners
          who want to borrow money, lend money, or request general investment strategy guidance.
        </p>

        <div class="notice">
          <strong>Important:</strong>
          Amicbridge is a connection platform. We do not provide loans, do not hold money,
          and do not guarantee repayment. All agreements are made directly between parties.
        </div>

        <div class="actions">
          <a class="btn primary" href="#request">Send a request</a>
          <a class="btn" href="#safety">Safety & verification</a>
        </div>
      </div>
    </section>

    <!-- ABOUT -->
    <section class="section" id="about">
      <div class="container">
        <h2>About Amicbridge</h2>

        <p>
          Amicbridge connects people who want to lend and borrow money directly.
          Borrowers explain their needs and repayment plan. Lenders define their terms and conditions.
        </p>

        <p class="muted">
          To improve trust and reduce fraud, Amicbridge requires identity verification
          before users are granted access to the network.
        </p>
      </div>
    </section>

    <!-- REQUEST FORM -->
    <section class="section alt" id="request">
      <div class="container">
        <h2>Send a request</h2>

        <p class="muted">
          Select the request type and provide the relevant information.
          Identity verification is handled separately before network access.
        </p>

        <div class="box">
          <form class="form" action={FORM_ENDPOINT} method="POST" id="amic-form">
            <input type="hidden" name="source" value="amicbridge.com" />

            <div class="grid2">
              <label>
                Full name / Company
                <input name="name" required />
              </label>

              <label>
                Email
                <input type="email" name="email" required />
              </label>
            </div>

            <label>
              Request type
              <select name="requestType" id="requestType" required>
                <option value="" disabled selected>Select</option>
                <option value="Borrow request">Borrow request</option>
                <option value="Lending request">Lending request</option>
                <option value="Investment strategy request">Investment strategy request</option>
              </select>
            </label>

            <!-- Borrow -->
            <div id="borrowFields" class="section-fields" hidden>
              <div class="grid2">
                <label>Amount needed (NOK)
                  <input name="borrow_amount" />
                </label>
                <label>Duration
                  <input name="borrow_duration" />
                </label>
              </div>
              <label>Repayment plan
                <textarea name="borrow_repayment" rows="4"></textarea>
              </label>
            </div>

            <!-- Lend -->
            <div id="lendFields" class="section-fields" hidden>
              <div class="grid2">
                <label>Amount available (NOK)
                  <input name="lend_amount" />
                </label>
                <label>Preferred duration
                  <input name="lend_duration" />
                </label>
              </div>
              <label>Lending conditions
                <textarea name="lend_conditions" rows="4"></textarea>
              </label>
            </div>

            <!-- Investment -->
            <div id="investFields" class="section-fields" hidden>
              <label>Investment goal
                <textarea name="invest_goal" rows="4"></textarea>
              </label>
            </div>

            <label>
              Additional details
              <textarea name="message" rows="6" required></textarea>
            </label>

            <label class="checkbox">
              <input type="checkbox" required />
              <span>
                I understand Amicbridge verifies user identity but does not guarantee outcomes or repayment.
              </span>
            </label>

            <button class="btn primary" type="submit">Send request</button>
          </form>
        </div>
      </div>
    </section>

    <!-- SAFETY -->
    <section class="section" id="safety">
      <div class="container">
        <h2>Safety & identity verification</h2>

        <div class="notice">
          <strong>Verified network:</strong>
          Amicbridge verifies user identity before granting access to the network.
          Verification helps reduce fraud but does not remove financial risk.
          Always use written agreements and consider professional advice for large amounts.
        </div>

        <ul class="plain-list">
          <li>Identity verification is required before network access</li>
          <li>Amicbridge does not hold funds or act as a lender</li>
          <li>All agreements are made directly between parties</li>
          <li>Use written contracts with clear repayment terms</li>
        </ul>
      </div>
    </section>

    <!-- CONTACT -->
    <section class="section alt" id="contact">
      <div class="container">
        <h2>Contact</h2>

        <div class="contact-box">
          <strong>{CEO_NAME}</strong>
          <div class="muted">CEO — Amicbridge</div>
          <p>Email: <a href={`mailto:${CEO_EMAIL}`}>{CEO_EMAIL}</a></p>
        </div>
      </div>
    </section>

    <!-- FOOTER -->
    <footer class="footer">
      <div class="container footer-inner">
        <div>
          <strong>Amicbridge</strong>
          <div class="muted">Verified network bridge</div>
        </div>

        <div class="muted">
          No custody • No guarantees • Parties agree directly
        </div>

        <div class="muted">
          © {new Date().getFullYear()} Amicbridge
        </div>
      </div>
    </footer>
  </main>

  <!-- JS -->
  <script>
    const type = document.getElementById("requestType");
    const borrow = document.getElementById("borrowFields");
    const lend = document.getElementById("lendFields");
    const invest = document.getElementById("investFields");

    type.addEventListener("change", () => {
      borrow.hidden = type.value !== "Borrow request";
      lend.hidden = type.value !== "Lending request";
      invest.hidden = type.value !== "Investment strategy request";
    });
  </script>

  <!-- STYLES -->
  <style>
    :root{
      --text:#111827;
      --muted:#4b5563;
      --border:#e5e7eb;
      --soft:#f9fafb;
      --radius:8px;
    }
    body{
      margin:0;
      font-family: system-ui, -apple-system, Segoe UI, Roboto, Arial;
      background:#fff;
      color:var(--text);
    }
    .container{max-width:900px;margin:auto;padding:0 1rem}
    .header{border-bottom:1px solid var(--border);background:#fff}
    .header-inner{display:flex;justify-content:space-between;padding:1rem 0}
    .nav a{margin-left:1rem;color:var(--muted);text-decoration:none;font-weight:600}
    .section{padding:2.2rem 0}
    .section.alt{background:var(--soft)}
    h1{font-size:2rem}
    h2{font-size:1.3rem}
    .lead{color:var(--muted)}
    .notice{border:1px solid var(--border);padding:.9rem;border-radius:var(--radius);color:var(--muted)}
    .box{border:1px solid var(--border);padding:1rem;border-radius:var(--radius);background:#fff}
    label{display:block;margin-top:.8rem;font-weight:600}
    input,textarea,select{width:100%;padding:.6rem;border:1px solid var(--border);border-radius:var(--radius)}
    .grid2{display:grid;grid-template-columns:1fr 1fr;gap:1rem}
    .checkbox{display:flex;gap:.5rem;margin-top:1rem;color:var(--muted)}
    .btn{padding:.6rem 1rem;border:1px solid var(--border);border-radius:var(--radius);background:#fff;font-weight:600}
    .btn.primary{background:#111827;color:#fff}
    .footer{border-top:1px solid var(--border);padding:1.4rem 0}
    .footer-inner{display:flex;justify-content:space-between;flex-wrap:wrap;color:var(--muted)}
    .plain-list{padding-left:1.2rem;color:var(--muted)}
    .contact-box{border:1px solid var(--border);padding:1rem;border-radius:var(--radius)}
    @media(max-width:720px){
      .nav{display:none}
      .grid2{grid-template-columns:1fr}
    }
  </style>
</body>
</html>
