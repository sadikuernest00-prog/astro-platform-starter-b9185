---
const FORM_ENDPOINT = "https://formspree.io/f/xzznjkvd";
const CEO_NAME = "Habbitx";
const CEO_EMAIL = "contact@robertamicolsen.com";

const faqs = [
  {
    q: "Is this financial advice?",
    a: "No. Amicbridge provides general educational and planning guidance only. It does not provide regulated investment advice or recommend specific securities. Consider a licensed professional for personalized advice.",
  },
  {
    q: "Do you manage money or hold funds?",
    a: "No. Amicbridge does not custody funds, execute trades, or guarantee outcomes. You remain in control of all decisions and accounts.",
  },
  {
    q: "What should I include in my request?",
    a: "Your goal, timeline, risk comfort, and an approximate budget. Avoid sensitive information such as passwords, bank logins, or full ID numbers.",
  },
  {
    q: "What happens after I submit?",
    a: "We review your request and may ask clarifying questions. You then receive a structured strategy framework and suggested next steps.",
  },
];
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Amicbridge — Investment Strategy Requests</title>
    <meta
      name="description"
      content="Send an investment strategy request. Get a clear plan framework for growing your money (educational guidance only)."
    />
    <meta name="robots" content="index,follow" />
  </head>

  <body>
    <header class="header" id="top">
      <div class="container header-inner">
        <a class="brand" href="#top" aria-label="Amicbridge home">
          <span class="brand-mark">Amicbridge</span>
          <span class="brand-sub">amicbridge.com</span>
        </a>

        <nav class="nav" aria-label="Primary navigation">
          <a href="#about">About</a>
          <a href="#how">How it works</a>
          <a href="#request">Send request</a>
          <a href="#contact">Contact</a>
        </nav>
      </div>
    </header>

    <main>
      <!-- HERO -->
      <section class="section hero" aria-label="Intro">
        <div class="container">
          <h1>Investment strategy requests</h1>

          <p class="lead">
            Amicbridge helps people describe how they want to grow their money and receive a clear strategy framework
            and next steps. This service provides <strong>general educational guidance</strong> — not regulated financial advice.
          </p>

          <div class="notice">
            <strong>Important:</strong> Amicbridge does not manage money, hold funds, execute trades, or guarantee returns.
            Lending and investing involve risk. Consider professional advice where appropriate.
          </div>

          <div class="actions">
            <a class="btn primary" href="#request">Send a request</a>
            <a class="btn" href="#how">How it works</a>
          </div>

          <ul class="plain-list">
            <li><strong>Simple:</strong> goal, timeline, and risk comfort</li>
            <li><strong>Private:</strong> share only what is needed</li>
            <li><strong>Clear:</strong> structured framework and next steps</li>
          </ul>
        </div>
      </section>

      <!-- ABOUT -->
      <section class="section" id="about">
        <div class="container">
          <h2>About</h2>
          <p>
            Many people want to invest but feel overwhelmed by noise, hype, and unclear information. Amicbridge is built
            to make planning understandable: define goals, understand risk, and follow a repeatable approach.
          </p>

          <p class="muted">
            This site is designed to be direct and transparent. If you need personalized financial advice, tax advice,
            or regulated recommendations, consult a licensed professional in your country.
          </p>
        </div>
      </section>

      <!-- HOW IT WORKS -->
      <section class="section alt" id="how">
        <div class="container">
          <h2>How it works</h2>

          <ol class="steps">
            <li>
              <strong>Send a request.</strong>
              <span>Tell us your goal, timeline, and risk comfort.</span>
            </li>
            <li>
              <strong>We review.</strong>
              <span>We may ask a few clarifying questions to avoid misunderstandings.</span>
            </li>
            <li>
              <strong>You receive a framework.</strong>
              <span>A structured plan template and next steps checklist (educational guidance).</span>
            </li>
          </ol>

          <div class="notice subtle">
            <strong>Security note:</strong> Do not send passwords, bank logins, full ID numbers, or card details.
          </div>
        </div>
      </section>

      <!-- REQUEST FORM -->
      <section class="section" id="request">
        <div class="container">
          <h2>Send an investment strategy request</h2>
          <p class="muted">
            Please keep details high-level. We will follow up if more information is needed.
          </p>

          <form class="form" action={FORM_ENDPOINT} method="POST">
            <input type="hidden" name="requestType" value="Investment strategy request" />

            <div class="grid2">
              <label>
                Full name
                <input name="name" autocomplete="name" required />
              </label>

              <label>
                Email
                <input type="email" name="email" autocomplete="email" required />
              </label>
            </div>

            <div class="grid3">
              <label>
                Current savings (approx.)
                <input name="currentSavings" placeholder="e.g., €5,000" />
              </label>

              <label>
                Monthly amount you can invest
                <input name="monthlyInvest" placeholder="e.g., €250" />
              </label>

              <label>
                Timeline
                <input name="timeline" placeholder="e.g., 1 year / 5 years" required />
              </label>
            </div>

            <label>
              Risk comfort
              <select name="riskComfort" required>
                <option value="" selected disabled>Select one</option>
                <option value="Low">Low</option>
                <option value="Moderate">Moderate</option>
                <option value="High">High</option>
              </select>
            </label>

            <label>
              What do you want help with?
              <textarea
                name="message"
                rows="7"
                placeholder="Describe your goal, what you want to achieve, and any constraints. Avoid sensitive information."
                required></textarea>
            </label>

            <label class="checkbox">
              <input type="checkbox" name="acknowledge" required />
              <span>I understand this is educational guidance and not financial advice.</span>
            </label>

            <button class="btn primary" type="submit">Send request</button>

            <p class="fineprint">
              By submitting, you agree we may contact you about your request. Do not include sensitive information.
            </p>
          </form>
        </div>
      </section>

      <!-- FAQ -->
      <section class="section alt" id="faq">
        <div class="container">
          <h2>FAQ</h2>

          <div class="faq">
            {faqs.map((f) => (
              <details class="faq-item">
                <summary>{f.q}</summary>
                <p>{f.a}</p>
              </details>
            ))}
          </div>
        </div>
      </section>

      <!-- CONTACT -->
      <section class="section" id="contact">
        <div class="container">
          <h2>Contact</h2>
          <p>
            For partnerships, serious investor inquiries, or questions about the platform, contact the CEO directly.
          </p>

          <div class="contact-box">
            <div>
              <strong>{CEO_NAME}</strong>
              <div class="muted">CEO — Amicbridge</div>
            </div>

            <div class="contact-lines">
              <div><span class="muted">Email:</span> <a href={`mailto:${CEO_EMAIL}`}>{CEO_EMAIL}</a></div>
              <div><span class="muted">Website:</span> <a href="https://robertamicolsen.com" target="_blank" rel="noreferrer">robertamicolsen.com</a></div>
            </div>

            <div class="actions">
              <a class="btn primary" href={`mailto:${CEO_EMAIL}?subject=Amicbridge%20-%20Contact`}>
                Email CEO
              </a>
              <a class="btn" href="#request">Send request</a>
            </div>
          </div>

          <p class="muted" style="margin-top: 0.8rem;">
            Please do not email sensitive information. Use the request form for structured details.
          </p>
        </div>
      </section>

      <!-- FOOTER -->
      <footer class="footer">
        <div class="container footer-inner">
          <div>
            <strong>Amicbridge</strong>
            <div class="muted">amicbridge.com</div>
          </div>

          <div class="muted">
            Educational guidance only • No custody • No guarantees
          </div>

          <div class="muted">
            © {new Date().getFullYear()} Amicbridge
          </div>
        </div>
      </footer>
    </main>

    <style>
      :root{
        --bg:#ffffff;
        --text:#111827;
        --muted:#4b5563;
        --border:#e5e7eb;
        --soft:#f9fafb;
        --link:#111827;
        --btn:#111827;
        --btnText:#ffffff;
        --radius:10px;
      }

      *{box-sizing:border-box}
      html,body{margin:0;padding:0}
      body{
        font-family: ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Arial;
        background: var(--bg);
        color: var(--text);
        line-height: 1.55;
      }
      a{color:var(--link)}
      .container{width:min(920px, calc(100% - 2rem)); margin: 0 auto;}

      .header{
        border-bottom:1px solid var(--border);
        background:#fff;
        position: sticky;
        top:0;
        z-index:10;
      }
      .header-inner{
        display:flex;
        align-items:baseline;
        justify-content:space-between;
        padding: 1rem 0;
        gap: 1rem;
      }
      .brand{
        display:flex;
        flex-direction:column;
        text-decoration:none;
      }
      .brand-mark{font-weight:800; font-size:1.05rem;}
      .brand-sub{color:var(--muted); font-size:.9rem;}

      .nav a{
        margin-left: 1rem;
        text-decoration:none;
        color:var(--muted);
        font-weight:600;
      }
      .nav a:hover{color:var(--text); text-decoration:underline;}

      .section{padding: 2.2rem 0;}
      .section.alt{background: var(--soft); border-top:1px solid var(--border); border-bottom:1px solid var(--border);}
      .hero{padding-top: 2.6rem;}
      h1{font-size:2rem; margin:0 0 .75rem;}
      h2{font-size:1.25rem; margin:0 0 .75rem;}
      p{margin:.6rem 0;}
      .lead{font-size:1.05rem; color:var(--muted); max-width: 70ch;}

      .notice{
        border:1px solid var(--border);
        background:#fff;
        padding: .9rem 1rem;
        border-radius: var(--radius);
        color: var(--muted);
        margin-top: 1rem;
      }
      .notice.subtle{background: var(--soft);}

      .actions{display:flex; gap:.75rem; flex-wrap:wrap; margin-top:1rem;}
      .btn{
        display:inline-block;
        padding:.7rem 1rem;
        border-radius: var(--radius);
        border:1px solid var(--border);
        text-decoration:none;
        font-weight:600;
        color:var(--text);
        background:#fff;
      }
      .btn.primary{
        background: var(--btn);
        color: var(--btnText);
        border-color: var(--btn);
      }

      .plain-list{margin:1rem 0 0; padding-left: 1.1rem; color: var(--muted);}
      .plain-list li{margin:.35rem 0;}

      .steps{margin: 0; padding-left: 1.25rem;}
      .steps li{margin:.7rem 0;}
      .steps li span{display:block; color:var(--muted); margin-top:.2rem;}

      .form{
        border:1px solid var(--border);
        background:#fff;
        padding: 1rem;
        border-radius: var(--radius);
      }
      label{display:block; font-weight:600; margin-top: .9rem;}
      input, textarea, select{
        width:100%;
        margin-top:.35rem;
        padding:.65rem .7rem;
        border:1px solid var(--border);
        border-radius: var(--radius);
        font: inherit;
        background:#fff;
      }
      textarea{resize: vertical;}
      .grid2{display:grid; grid-template-columns: 1fr 1fr; gap: 1rem;}
      .grid3{display:grid; grid-template-columns: 1fr 1fr 1fr; gap: 1rem;}
      .checkbox{
        display:flex;
        gap:.6rem;
        align-items:flex-start;
        margin-top: 1rem;
        color: var(--muted);
      }
      .checkbox input{width:auto; margin-top:.25rem;}
      .fineprint{color:var(--muted); font-size:.92rem; margin-top:.8rem;}

      .faq{display:grid; gap:.6rem;}
      .faq-item{
        border:1px solid var(--border);
        border-radius: var(--radius);
        background:#fff;
        padding: .8rem .9rem;
      }
      summary{font-weight:600; cursor:pointer;}
      details p{color: var(--muted); margin-top:.6rem;}

      .contact-box{
        border:1px solid var(--border);
        border-radius: var(--radius);
        padding: 1rem;
        background:#fff;
      }
      .contact-lines{margin-top:.7rem; display:grid; gap:.3rem;}

      .footer{
        border-top:1px solid var(--border);
        padding: 1.4rem 0;
        background:#fff;
      }
      .footer-inner{
        display:flex;
        justify-content:space-between;
        gap: 1rem;
        flex-wrap:wrap;
        color: var(--muted);
        font-size:.95rem;
      }

      @media (max-width: 760px){
        .nav{display:none}
        .grid2,.grid3{grid-template-columns:1fr}
      }
    </style>
  </body>
</html>
