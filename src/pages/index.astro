      background:#fff;border:1px solid var(--border);border-radius: var(--r);
      padding:1.1rem 1.15rem;
    }
    .side-soft{background: var(--soft)}
    .side-card h3{margin:0 0 .6rem}
    .side-card ul{margin:0;padding-left:1.15rem;color:var(--muted)}
    .side-card li{margin:.45rem 0}

    /* Trust grid */
    .trust-grid{display:grid;grid-template-columns:repeat(3,1fr);gap:1rem}
    .trust-card{
      background:#fff;border:1px solid var(--border);border-radius: var(--r);
      padding:1.1rem 1.15rem;
    }
    .trust-card h3{margin:0 0 .35rem}
    .trust-card p{margin:0;color:var(--muted)}

    /* FAQ */
    .faq{display:grid;gap:.65rem}
    .faq-item{
      border:1px solid var(--border);
      background:#fff;
      border-radius: var(--r);
      padding: .95rem 1.05rem;
    }
    .faq-item summary{cursor:pointer;font-weight:950}
    .faq-item p{margin:.6rem 0 0;color:var(--muted)}

    /* Contact */
    .contact-grid{
      display:grid;grid-template-columns: 1.2fr .8fr;
      gap: 1rem; align-items: start;
    }
    .contact-card{
      background:#fff;border:1px solid var(--border);border-radius: var(--r);
      padding:1.2rem; box-shadow: 0 10px 40px rgba(2,6,23,.05);
    }
    .contact-card.soft{background: var(--soft); box-shadow:none}
    .contact-top{display:flex;align-items:center;gap:.75rem;margin-bottom:.9rem}
    .avatar{
      width:46px;height:46px;border-radius:16px;
      display:grid;place-items:center;
      font-weight:950;color:#fff;
      background: linear-gradient(135deg, var(--brand), var(--ok));
      box-shadow: 0 12px 26px rgba(37,99,235,.18);
    }
    .contact-lines{display:grid;gap:.65rem;margin-top:.6rem}
    .line{
      display:flex;justify-content:space-between;gap:1rem;
      padding:.75rem .85rem;background: var(--soft);
      border:1px solid var(--border);border-radius:14px;
    }
    .label{color:var(--muted2);font-weight:950}
    .link{font-weight:950;text-decoration:none}
    .link:hover{text-decoration:underline}
    .contact-note{
      margin-top:.9rem;
      padding:.9rem 1rem;
      border-radius: var(--r);
      border: 1px solid rgba(37,99,235,.22);
      background: rgba(37,99,235,.06);
      color: var(--muted);
      font-weight: 850;
    }
    .contact-actions{display:flex;gap:.8rem;flex-wrap:wrap;margin-top:1rem}

    /* Footer */
    .footer{border-top:1px solid var(--border);padding:2.2rem 0 1.6rem;background:#fff}
    .footer-inner{display:flex;align-items:flex-start;justify-content:space-between;gap:1rem;flex-wrap:wrap}
    .foot-brand{display:flex;align-items:center;gap:.7rem}
    .foot-links{display:flex;gap:1rem;flex-wrap:wrap}
    .foot-links a{text-decoration:none;color:var(--muted);font-weight:950}
    .foot-links a:hover{text-decoration:underline}
    .foot-bottom{margin-top:1.2rem;padding-top:1rem;border-top:1px solid var(--border)}

    /* Responsive */
    @media (max-width: 1020px){
      .hero-grid{grid-template-columns:1fr}
      .signal-row{grid-template-columns:1fr}
      .cards{grid-template-columns:1fr}
      .steps{grid-template-columns:1fr}
      .form-layout{grid-template-columns:1fr}
      .trust-grid{grid-template-columns:1fr}
      .contact-grid{grid-template-columns:1fr}
      .grid3{grid-template-columns:1fr}
    }
    @media (max-width: 780px){
      .nav{display:none}
      .grid2{grid-template-columns:1fr}
    }
  </style>
</body>
