    .kv span{color:var(--muted);font-weight:850;font-size:.92rem}
    .kv strong{font-weight:950}
    .hr{height:1px;background: var(--border); margin: 1rem 0}
    .mini-list{margin:0;padding-left:1.1rem;color:var(--muted)}
    .mini-list li{margin:.4rem 0}
    .panel-note{margin:0;color:var(--muted);font-size:.92rem}

    /* Sections */
    .section{padding: 3.1rem 0}
    .section-soft{background: linear-gradient(180deg, var(--soft), #fff)}
    .section-head{max-width: 82ch;margin-bottom: 1.25rem}
    .section-head h2{margin:0;font-size: 1.8rem;letter-spacing:-.01em}
    .section-head p{margin:.55rem 0 0;color:var(--muted)}

